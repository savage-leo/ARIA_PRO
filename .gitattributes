# Auto detect text files and perform LF normalization
* text=auto eol=lf
# Model files (track with LFS)
*.h5 filter=lfs diff=lfs merge=lfs -text
*.pkl filter=lfs diff=lfs merge=lfs -text
*.joblib filter=lfs diff=lfs merge=lfs -text
*.model filter=lfs diff=lfs merge=lfs -text
*.onnx filter=lfs diff=lfs merge=lfs -text
*.gguf filter=lfs diff=lfs merge=lfs -text
*.bin filter=lfs diff=lfs merge=lfs -text
# Data files (track with LFS)
*.csv filter=lfs diff=lfs merge=lfs -text
*.parquet filter=lfs diff=lfs merge=lfs -text
*.json.gz filter=lfs diff=lfs merge=lfs -text
# Explicitly track these model files with LFS
backend/models/llm_macro.gguf filter=lfs diff=lfs merge=lfs -text
backend/models/visual_ai.onnx filter=lfs diff=lfs merge=lfs -text
# Explicitly exclude these files from LFS
.gitattributes !text !filter !merge !diff
.gitignore !text !filter !merge !diff
README.md !text !filter !merge !diff
LICENSE !text !filter !merge !diff
